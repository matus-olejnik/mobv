<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View"/>

        <variable
                name="contactItem"
                type="com.emmm.mobv.data.db.model.ContactItem"/>
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

        <LinearLayout
                android:id="@+id/item_header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/avatar_size"
                    android:layout_height="@dimen/avatar_size"
                    android:layout_gravity="center_vertical"
            />

            <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    android:text="@{contactItem.name}"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
            />

        </LinearLayout>

        <TextView
            android:id="@+id/contactAccountId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_header_container"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@{contactItem.contactAccountId}"
            android:textSize="16sp" />

    </RelativeLayout>
</layout>