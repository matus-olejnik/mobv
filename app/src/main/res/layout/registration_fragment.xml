<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="model"
            type="com.emmm.mobv.screens.registration.RegistrationViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".screens.registration.RegistrationFragment">

        <ImageView
            android:id="@+id/background_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgroundelemnets"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/login_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/usericon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.18" />

        <CheckBox
            android:id="@+id/simpleCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/avenir"
            android:fontWeight="200"
            android:text="@string/agreement"
            android:textColor="#FFFDFD"
            android:textSize="14sp"
            android:checked="@={model.checkboxChecked}"
            android:visibility="@{(model.checkboxVisibility == View.VISIBLE ? View.VISIBLE : (model.checkboxVisibility == View.GONE ? View.GONE : View.INVISIBLE))}"
            android:buttonTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/background_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_icon"
            app:layout_constraintVertical_bias="0.146"
            tools:ignore="MissingConstraints"/>
        <!--With checked property you can set the current state of the check box-->

        <TextView
            android:id="@+id/secretSeedTextView"
            android:layout_width="319dp"
            android:layout_height="53dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/avenir"
            android:fontWeight="200"
            android:text="@={model.secretSeedTextView}"
            android:textAlignment="center"
            android:textColor="#FFFDFD"
            android:textIsSelectable="true"
            android:textSize="14sp"
            android:visibility="@{model.secretSeedTextViewVisibility}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.532"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_icon"
            app:layout_constraintVertical_bias="0.229" />

        <TextView
            android:id="@+id/errorTextView"
            android:layout_width="222dp"
            android:layout_height="26dp"
            android:fontFamily="@font/avenir"
            android:fontWeight="200"
            android:text="@string/terms_and_conditions"
            android:textAlignment="center"
            android:textColor="#FFFDFD"
            android:textIsSelectable="true"
            android:textSize="9sp"
            android:visibility="@{(model.checkboxChecked == true ? View.GONE : (model.checkboxChecked == false ? View.VISIBLE : View.INVISIBLE))}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_icon"
            app:layout_constraintVertical_bias="0.541" />

        <ProgressBar
            android:id="@+id/progress_Bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateTint="@color/white"
            android:max="100"
            android:minWidth="200dp"
            android:minHeight="50dp"
            android:progress="0"
            android:visibility="@{(model.progressBarVisibility == View.VISIBLE ? View.VISIBLE : (model.progressBarVisibility == View.GONE ? View.GONE : View.INVISIBLE))}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_icon"
            app:layout_constraintVertical_bias="0.699" />

        <Button
            android:id="@+id/registrationButton"
            android:layout_width="222dp"
            android:layout_height="62dp"
            android:background="@drawable/registerbutton"
            android:onClick="@{() -> model.registerNewUser()}"
            android:visibility="@{(model.registrationButtonVisibility == View.VISIBLE ? View.VISIBLE : (model.registrationButtonVisibility == View.GONE ? View.GONE : View.INVISIBLE))}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/simpleCheckBox"
            app:layout_constraintVertical_bias="0.176"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/goToLoginPageButton"
            android:layout_width="222dp"
            android:layout_height="62dp"
            android:background="@drawable/gotologinpagebutton"
            android:visibility="@{(model.goToLoginPageButtonVisibility == View.VISIBLE ? View.VISIBLE : (model.goToLoginPageButtonVisibility == View.GONE ? View.GONE : View.INVISIBLE))}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/secretSeedTextView"
            app:layout_constraintVertical_bias="0.107"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />
        <!--Attention! I temporarily hid the given button, which overlaps the Register button, using the visibility property.-->

        <Button
            android:id="@+id/backButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/backbutton_2"
            android:stateListAnimator="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.046"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
