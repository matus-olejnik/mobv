<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="model"
                  type="com.emmm.mobv.screens.main.MainViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.main.MainFragment">

        <ImageView
            android:id="@+id/background_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardelement"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/balanceLumen"
            android:layout_width="390dp"
            android:layout_height="162dp"
            android:background="@drawable/balancelumen"
            app:layout_constraintBottom_toBottomOf="@+id/background_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/background_color"
            app:layout_constraintVertical_bias="0.451"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/balanceEuro"
            android:layout_width="390dp"
            android:layout_height="162dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/balanceeuro"
            app:layout_constraintBottom_toTopOf="@+id/toOrdersButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.612"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/balanceLumen"
            app:layout_constraintVertical_bias="0.807"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir"
            android:fontWeight="500"
            android:text="COIN MEMM"
            android:textAlignment="center"
            android:textColor="#FFFDFD"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/publicKey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.066"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.47"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/publicKey"
            android:layout_width="362dp"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/avenir"
            android:fontWeight="200"
            android:text="GAUAGLGAKTOJD2MZKZP6SKXA3DGS254ATIRW2UJ63HE7KPCVA6MY2JBH"
            android:textAlignment="center"
            android:textColor="#FFFDFD"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:fontFamily="@font/avenir"
            android:fontWeight="200"
            android:text="Stellar Network"
            android:textAlignment="center"
            android:textColor="#FFFDFD"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/balanceLumen"
            app:layout_constraintEnd_toStartOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.153"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="60dp"
            android:fontFamily="@font/avenir"
            android:fontWeight="500"
            android:text="10/22"
            android:textAlignment="center"
            android:textColor="#FFFDFD"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/balanceLumen"
            app:layout_constraintEnd_toEndOf="@+id/background_color"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/moneyBalanceTextView"
            android:layout_width="135dp"
            android:layout_height="45dp"
            android:fontFamily="@font/avenir"
            android:fontWeight="500"
            android:text="@={model.moneyBalanceTextView}"
            android:textAlignment="center"
            android:textColor="#FFFDFD"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="@+id/balanceLumen"
            app:layout_constraintEnd_toEndOf="@+id/balanceLumen"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="@+id/balanceLumen"
            app:layout_constraintTop_toTopOf="@+id/balanceLumen"
            app:layout_constraintVertical_bias="0.285"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/moneyBalanceTextView2"
            android:layout_width="132dp"
            android:layout_height="39dp"
            android:fontFamily="@font/avenir"
            android:fontWeight="500"
            android:text="10 000.00"
            android:textAlignment="center"
            android:textColor="#FFFDFD"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="@+id/balanceEuro"
            app:layout_constraintEnd_toEndOf="@+id/balanceEuro"
            app:layout_constraintHorizontal_bias="0.449"
            app:layout_constraintStart_toStartOf="@+id/balanceEuro"
            app:layout_constraintTop_toTopOf="@+id/balanceEuro"
            app:layout_constraintVertical_bias="0.292"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/reloadButton_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/reloadbutton"
            app:layout_constraintBottom_toBottomOf="@+id/balanceLumen"
            app:layout_constraintEnd_toEndOf="@+id/balanceLumen"
            app:layout_constraintHorizontal_bias="0.92"
            app:layout_constraintStart_toStartOf="@+id/balanceLumen"
            app:layout_constraintTop_toTopOf="@+id/balanceLumen"
            app:layout_constraintVertical_bias="0.696"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/reloadButton_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/reloadbutton"
            app:layout_constraintBottom_toBottomOf="@+id/balanceEuro"
            app:layout_constraintEnd_toEndOf="@+id/balanceEuro"
            app:layout_constraintHorizontal_bias="0.92"
            app:layout_constraintStart_toStartOf="@+id/balanceEuro"
            app:layout_constraintTop_toTopOf="@+id/balanceEuro"
            app:layout_constraintVertical_bias="0.669"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/homeButton"
            android:layout_width="80dp"
            android:layout_height="83dp"
            android:background="@drawable/homebutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/contactsButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/toOrdersButton"
            android:layout_width="80dp"
            android:layout_height="83dp"
            android:background="@drawable/ordersbutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/toTransactionsButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/contactsButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/toTransactionsButton"
            android:layout_width="80dp"
            android:layout_height="83dp"
            android:background="@drawable/transactionbutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/logoutButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/toOrdersButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="80dp"
            android:layout_height="83dp"
            android:background="@drawable/logoutbutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/toTransactionsButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/contactsButton"
            android:layout_width="80dp"
            android:layout_height="83dp"
            android:background="@drawable/contactbutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/toOrdersButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/homeButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
